<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/space_line2"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_title"
        style="@style/tv_stander"
        android:text="标题"
        android:textColor="@color/text333"
        android:textSize="@dimen/sp_big2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:background="@mipmap/ic_app512"
        android:layout_marginTop="@dimen/space_line"
        app:cardCornerRadius="@dimen/space_line3">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_app512"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/space_line"
        app:layout_constraintTop_toBottomOf="@+id/card_recommend"
        app:layout_constraintLeft_toLeftOf="@+id/card_recommend"
        android:text="广告"/>
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:layout_marginTop="@dimen/space_line"
        android:layout_marginLeft="@dimen/space_line2"
        app:layout_constraintTop_toBottomOf="@+id/card_recommend"
        app:layout_constraintLeft_toRightOf="@+id/tv_tip"
        android:text="昵称  时间"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"
        android:layout_marginTop="@dimen/space_line2"
        android:background="@color/gray_db"/>
</androidx.constraintlayout.widget.ConstraintLayout>