<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/space_line2"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="精彩小视频"
        android:gravity="center"
        android:textSize="@dimen/sp_big2"
        android:textColor="@color/text333"
        android:drawableRight="@mipmap/ic_go"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_short_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_line2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/space_line2"
        android:background="@color/gray_db"/>
</LinearLayout>