<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="click"
            type="android.view.View.OnClickListener"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/match_match"
        android:background="@android:color/white"
        android:gravity="center"
        tools:context=".fragment.LoginFragment">

        <LinearLayout
            android:id="@+id/ll_login"
            style="@style/wrap_wrap"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                style="@style/wrap_wrap"
                android:background="@drawable/bg_gray_radius"
                android:ems="9"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:padding="@dimen/space_line2"
                android:textSize="@dimen/standard_title" />

            <EditText
                style="@style/wrap_wrap"
                android:layout_marginTop="@dimen/space_line2"
                android:background="@drawable/bg_gray_radius"
                android:ems="9"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:maxLength="12"
                android:padding="@dimen/space_line2"
                android:textSize="@dimen/standard_title" />

            <Button
                android:id="@+id/btn_login"
                style="@style/wrap_wrap"
                android:layout_marginTop="@dimen/space_line3"
                android:background="@drawable/bg_gray_radius"
                android:ems="5"
                android:text="登录"
                android:onClick="@{click}"
                android:textColor="@android:color/white"
                android:textSize="@dimen/standard_title" />
        </LinearLayout>

        <ImageView
            style="@style/wrap_wrap"
            android:layout_marginTop="@dimen/space_line2"
            android:src="@mipmap/ic_wx"
            android:onClick="@{click}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_login" />

        <TextView
            android:id="@+id/btn_to_register"
            style="@style/wrap_wrap"
            android:layout_margin="@dimen/space_line3"
            android:background="@drawable/bg_gray_radius_soild"
            android:ems="5"
            android:gravity="center"
            android:padding="7dp"
            android:text="注册账号"
            android:onClick="@{click}"
            android:textColor="@color/blue_a5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/btn_to_fin"
            style="@style/wrap_wrap"
            android:layout_margin="@dimen/space_line3"
            android:background="@drawable/bg_gray_radius_soild"
            android:ems="5"
            android:gravity="center"
            android:padding="7dp"
            android:text="找回密码"
            android:onClick="@{click}"
            android:textColor="@color/blue_a5"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>